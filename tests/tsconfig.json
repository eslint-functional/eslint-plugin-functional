{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "outDir": "../build",
    "skipLibCheck": true,
    "declaration": false,
    // Turn off checks to make debugging nicer.
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "strict": false
  }
}
