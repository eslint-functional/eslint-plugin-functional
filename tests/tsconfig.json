{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../build",
    "skipLibCheck": true,
    "declaration": false,
    // Turn off strict checks to make debugging nicer.
    "strict": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false
  }
}
